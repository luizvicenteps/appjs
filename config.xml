<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ADS0035</name>
    <description>
        Simples lista de contatos. Usando HTML, CSS, JS, BOOTSTRAP e KNOCKOUT.
    </description>
    <author email="contato@luizvicenteps.com.br" href="http://www.luizvicenteps.com.br">
        ADS0035 - Luiz Vicente, Brando Mota, Caio Vitor, Bruno Gomes
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="assets/ico/android/ldpi.png" density="ldpi" />
        <icon src="assets/ico/android/mdpi.png" density="mdpi" />
        <icon src="assets/ico/android/hdpi.png" density="hdpi" />
        <icon src="assets/ico/android/xhdpi.png" density="xhdpi" />
        <icon src="assets/ico/android/xxhdpi.png" density="xxhdpi" />
        <icon src="assets/ico/android/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <preference name="Orientation" value="landscape"/>
</widget>
